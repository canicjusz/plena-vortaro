{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["chrome", "svelte"],
    "typeRoots": ["node_modules/@types"],
    "isolatedModules": false,
    "target": "ES2018",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "strict": true
}
