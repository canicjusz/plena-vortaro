{
  "name": "Plena Vortaro",
  "description": "Ĉi tio estas neoficiala aldonaĵo de PIV.",
  "version": "1.3.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/on_16.png",
    "32": "icons/on_32.png",
    "128": "icons/on_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Plena Vortaro",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/on_16.png",
      "32": "icons/on_32.png",
      "128": "icons/on_128.png"
    }
  },
  "author": "Jan Michalak",
  "permissions": ["storage", "contextMenus"],
  "host_permissions": ["https://vortaro.net/*"]
}
